<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Package_Type__c</field>
        <field>Owner</field>
        <field>VIN__c</field>
        <field>Account_Name__c</field>
        <field>Seller__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>C-Level Approval</label>
        <name>C_Level_Approval</name>
    </approvalStep>
    <emailTemplate>Action_Package_Templates/Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Action_Package__c.Status__c</field>
            <operation>equals</operation>
            <value>Recalled,Open,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Action_Package__c.Require_C_Level_Approval__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Approval_Notice_to_Action_Package_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitted_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_Rejection_Notice_to_Action_Package_Owner</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Recalled_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Submitted_to_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>C-Level Approval</label>
    <recallActions>
        <action>
            <name>Recalled_to_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_to_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
